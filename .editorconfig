# =============================================================================
# Visagen .editorconfig - Coding Standards
# https://editorconfig.org
# =============================================================================

root = true

# -----------------------------------------------------------------------------
# Default Settings
# -----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# -----------------------------------------------------------------------------
# Python
# -----------------------------------------------------------------------------
[*.py]
indent_size = 4
max_line_length = 88

# -----------------------------------------------------------------------------
# YAML Configuration
# -----------------------------------------------------------------------------
[*.{yaml,yml}]
indent_size = 2

# -----------------------------------------------------------------------------
# JSON
# -----------------------------------------------------------------------------
[*.json]
indent_size = 2

# -----------------------------------------------------------------------------
# Markdown
# -----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false

# -----------------------------------------------------------------------------
# Makefiles (require tabs)
# -----------------------------------------------------------------------------
[Makefile]
indent_style = tab

# -----------------------------------------------------------------------------
# Shell Scripts
# -----------------------------------------------------------------------------
[*.{sh,bash}]
indent_size = 2

# -----------------------------------------------------------------------------
# TOML (pyproject.toml, etc.)
# -----------------------------------------------------------------------------
[*.toml]
indent_size = 2
